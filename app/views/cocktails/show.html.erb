<div class="banner"
      style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),

      <% if @cocktail.photo.attached? %>
        url('<%= cl_image_path @cocktail.photo.key %>')
      <% else %>
        url('https://images.unsplash.com/photo-1497990902153-c6d041aad676?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1107&q=80')
      <% end %>

      ">
  <h1 class="text-center m-4"><%= @cocktail.name %></h1>
</div>

<div class="container mb-5">



  <h2 class="text-center m-2">Dose</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li class="text-center m-2"><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "x", dose_path(dose), method: :delete , class: "btn btn-danger"%></li>
    <% end %>
  </ul>

  <h3 class="text-center m-2">Create a Dose for <%= @cocktail.name %></h3>

  <%= simple_form_for [@cocktail, Dose.new] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= link_to 'Back', root_path, class: "btn btn-primary" %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

