<h1><%= @cocktail.name %></h1>

<%= link_to 'Back', cocktails_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<h2>Dose</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> (<%= link_to "delete", dose_path(dose), method: :delete %>)</li>
  <% end %>
</ul>

<h3>Create a Dose for <%= @cocktail.name %></h3>

<%= simple_form_for [@cocktail, Dose.new] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit %>
<% end %>


