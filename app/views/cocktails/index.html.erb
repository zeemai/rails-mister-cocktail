<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <h1>
      <span id="banner-typed-text"></span>
    </h1>
    <br />
    <%= link_to 'Create a new 🍸', new_cocktail_path , class: "btn-blue" %>
  </div>
</div>

<% @cocktails.each do |cocktail| %>
  <div class="card-category m-2"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        <% if cocktail.photo.attached? %>
          url('<%= cl_image_path cocktail.photo.key %>')
        <% else %>
          url('https://images.unsplash.com/photo-1497990902153-c6d041aad676?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1107&q=80')
        <% end %>
        ">
    <%= link_to cocktail_path(cocktail) do %>
      <%=cocktail.name%>
    <% end %>
  </div>
<% end %>

<button id="back-to-top" type="button">
  Go to Top
</button>

